---
import { Image } from 'astro:assets';
import '../styles/card.css'; 

interface Props {
  version: string;
	title: string;
	description: string;
	body: string;
  image: ImageMetadata;
}

const { version, description, title, body, image } = Astro.props;
---

<div class="card">
    <div class={`ellipse ${version}1`}></div>
    <div class={`ellipse ${version}2`}></div>
    <div class={`ellipse ${version}3`}></div>
    <div class={`ellipse ${version}4`}></div>
    <div class="card-image">
        <Image 
        class={"card_imge"} 
        src={image} 
        width={250}
        decoding="async"
        loading="lazy"
        alt={description}/>
    </div>
	<div class="card-content">
		<h3>
			{title}
		</h3>
		<p>
			{body}
		</p>
	</div>
</div>

